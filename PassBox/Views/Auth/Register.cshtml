@using Entities.Dtos.UserDtos;
@model UserRegisterDto
@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title> PassBox - Admin </title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/crovexhtml/assets/images/favicon.ico">

    <!-- App css -->
    <link href="~/crovexhtml/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/crovexhtml/assets/css/jquery-ui.min.css" rel="stylesheet">
    <link href="~/crovexhtml/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/crovexhtml/assets/css/metisMenu.min.css" rel="stylesheet" type="text/css" />
    <link href="~/crovexhtml/assets/css/app.min.css" rel="stylesheet" type="text/css" />

</head>

<body class="account-body accountbg">

    <!-- Log In page -->
    <div class="container">
        <div class="row vh-100 ">
            <div class="col-12 align-self-center">
                <div class="auth-page">
                    <div class="card auth-card shadow-lg">
                        <div class="card-body">
                            <div class="px-3">
                                <div class="auth-logo-box">
                                    <a href="~/crovexhtml/dashboard/analytics-index.html" class="logo logo-admin"><img src="https://cdn-icons-png.flaticon.com/512/270/270008.png" height="55" alt="logo" class="auth-logo"></a>
                                </div><!--end auth-logo-box-->

                                <div class="text-center auth-logo-text">
                                    <h4 class="mt-0 mb-3 mt-5">Register for Pass Box</h4>
                                    <p class="text-muted mb-0">Get your free Crovex account now.</p>
                                </div> <!--end auth-logo-text-->


                                <form class="form-horizontal auth-form my-4" asp-controller="Auth" asp-action="Register" method="post">
                                    @* <div class="form-group text-danger" asp-validation-summary="ModelOnly"></div> *@
                                    <div class="form-group">
                                        <label asp-for="FirstName">First Name</label>
                                        <div class="input-group mb-3">
                                            <span class="auth-form-icon">
                                                <i class="dripicons-user"></i>
                                            </span>
                                            <input type="text" asp-for="FirstName" class="form-control" placeholder="Enter first name">
                                        </div>
                                        @Html.ValidationMessageFor(x => x.FirstName,null, new { @class = "text-danger" })
                                    </div><!--end form-group-->

                                    <div class="form-group">
                                        <label asp-for="LastName">Last Name</label>
                                        <div class="input-group mb-3">
                                            <span class="auth-form-icon">
                                                <i class="dripicons-user"></i>
                                            </span>
                                            <input type="text" asp-for="LastName" class="form-control" placeholder="Enter last name">
                                        </div>
                                        @Html.ValidationMessageFor(x => x.LastName,null, new { @class = "text-danger" })
                                    </div><!--end form-group-->

                                    <div class="form-group">
                                        <label asp-for="UserName">Username</label>
                                        <div class="input-group mb-3">
                                            <span class="auth-form-icon">
                                                <i class="dripicons-user"></i>
                                            </span>
                                            <input type="text" asp-for="UserName" class="form-control" placeholder="Enter username">
                                        </div>
                                        @Html.ValidationMessageFor(x => x.UserName,null, new { @class = "text-danger" })
                                    </div><!--end form-group-->

                                    <div class="form-group">
                                        <label asp-for="Email">Email</label>
                                        <div class="input-group mb-3">
                                            <span class="auth-form-icon">
                                                <i class="dripicons-mail"></i>
                                            </span>
                                            <input type="email" asp-for="Email" class="form-control" placeholder="Enter Email">
                                        </div>
                                        @Html.ValidationMessageFor(x => x.Email,null, new { @class = "text-danger" })
                                    </div><!--end form-group-->

                                    <div class="form-group">
                                        <label asp-for="PasswordHash">Password</label>
                                        <div class="input-group mb-3">
                                            <span class="auth-form-icon">
                                                <i class="dripicons-lock"></i>
                                            </span>
                                            <input type="password" asp-for="PasswordHash" class="form-control" placeholder="Enter password">
                                        </div>
                                        @Html.ValidationMessageFor(x => x.PasswordHash,null, new { @class = "text-danger" })
                                    </div><!--end form-group-->

                                    <div class="form-group mb-0 row">
                                        <div class="col-12 mt-2">
                                            <button class="btn btn-gradient-primary btn-round btn-block waves-effect waves-light" type="submit">Register <i class="fas fa-sign-in-alt ml-1"></i></button>
                                        </div><!--end col-->
                                    </div> <!--end form-group-->
                                </form><!--end form-->
                            </div><!--end /div-->

                            <div class="m-3 text-center text-muted">
                                <p class="">Already have an account ? <a asp-action="Login" class="text-primary ml-2">Log in</a></p>
                            </div>
                        </div><!--end card-body-->
                    </div><!--end card-->
                </div><!--end auth-card-->
            </div><!--end col-->
        </div><!--end row-->
    </div><!--end container-->
    <!-- End Log In page -->
    <!-- jQuery  -->
    <script src="~/crovexhtml/assets/js/jquery.min.js"></script>
    <script src="~/crovexhtml/assets/js/jquery-ui.min.js"></script>
    <script src="~/crovexhtml/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/crovexhtml/assets/js/jquery.slimscroll.min.js"></script>

</body>

</html>