@using Entities.Dtos.BoxDtos;
@model BoxDto
<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><span class="fas fa-search"></span> Displaying Details: [@Model.Box.Id] @Model.Box.SiteName</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Cancel">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="modal-body">
                                <div class="row">                                                        
                                        <div class="form-group col-md-6">
                                            <label>Username</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                                </div>
                                                <input type="text" asp-for="Box.Username" class="form-control" disabled="disabled">
                                            </div>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>Password</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                                </div>
                                                <input type="text" asp-for="Box.Password" class="form-control" disabled="disabled">
                                            </div>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>Created By</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                                </div>
                                                <input type="text" asp-for="Box.CreatedBy" class="form-control" disabled="disabled">
                                            </div>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>Created Date</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                                </div>
                                                <input type="text" asp-for="Box.CreatedDate" class="form-control" disabled="disabled">
                                            </div>
                                        </div>                                                                          
                                </div>
                            </div>
                        </div><!--end card-body-->
                        <div class="modal-footer">
                            <button type="button" class="btn btn-gradient-danger waves-effect btn-block mb-2" data-dismiss="modal" role="button"><i class="fas fa-times"></i> Close</button>
                        </div>
                    </div><!--end card-->
                </div><!--end col-->
            </div>
        </div>
    </div>
</div>
